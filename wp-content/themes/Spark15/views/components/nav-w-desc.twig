<nav class="spark-region {{ spark_class }}"> 
	<ul>
        {% for item in nav.get_items %}
                {# {{ dump(item) }} #}
                <li class="nav-main-item {{item.classes | join(' ')}}">
                  <p class="description">{{ item.description }}</p>
                  <a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a>
                    {% if item.get_children %}
                        <ul class="nav-drop">
                          {% for child in item.get_children %}
                            <li class="nav-drop-item"><a href="{{child.get_link}}">{{child.title}}</a></li>
                          {% endfor %}
                        </ul>
                     {% endif %}
                </li>
        {% endfor %}
	</ul>
</nav>